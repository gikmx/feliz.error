{
  "name": "feliz.error",
  "version": "0.1.0-beta.4",
  "description": "Simple error management for feliz.js projects",
  "main": "lib/index.js",
  "author": "Héctor Menéndez <etor@gik.mx>",
  "license": "MIT",
  "analyze": true,
  "keywords": [
    "feliz",
    "helper",
    "error",
    "exception"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gikmx/feliz.error"
  },
  "bugs": {
    "url": "https://github.com/gikmx/feliz.error/issues"
  },
  "engines": {
    "node": ">=6.2.0"
  },
  "scripts": {
    "docs": "jsdoc2md -t ./template.hbs -d 1 'lib/**/*.js' > README.md",
    "postdocs": "git add --force README.md",
    "test": "tape ./test | tap-spec",
    "debug": "node-debug --cli --no-debug-brk --debug-port 5900 --web-port 9900 --save-live-edit --no-preload",
    "debug:watch": "nodemon ./test -x 'npm run docs && npm run debug -s' -w ./lib -w ./test | tap-spec",
    "cover": "npm run cover:stats && npm run cover:send",
    "cover:check": "npm run cover:stats && istanbul check-coverage",
    "cover:stats": "istanbul cover tape -- ./test",
    "cover:send": "cat ./coverage/lcov.info | coveralls",
    "postversion": "git add package.json",
    "precommit": "npm test && npm run cover:check && npm run docs && npm version prerelease --no-git-tag-version"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "columnify": "^1.5.4",
    "debug": "^2.2.0",
    "stack-trace": "0.0.9"
  },
  "devDependencies": {
    "coveralls": "^2.11.12",
    "husky": "^0.11.6",
    "istanbul": "^0.4.4",
    "jsdoc-to-markdown": "^1.3.6",
    "nodemon": "^1.10.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0"
  }
}
