{
    "name": "@gik/tools-thrower",
    "version": "0.1.6",
    "description": "A simple error manager",
    "license": "MIT",
    "contributors": [
        "Héctor Menéndez <hector@gik.mx> (http://hectormenendez.com)"
    ],
    "keywords": [
        "error",
        "exception"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/gikmx/tools-thrower"
    },
    "bugs": {
        "url": "https://github.com/gikmx/tools-thrower/issues"
    },
    "engines": {
        "node": ">=6.2.0",
        "npm": ">=5.4.2"
    },
    "main": "lib/index.js",
    "directories": {
        "src": "./src",
        "out": "./lib",
        "test": "./test"
    },
    "scripts": {
        "ver:commit": "gik-npm version:patch",
        "lint:docs": "gik-npm docs:lint",
        "lint:code": "gik-npm lint:src",
        "lint:test": "gik-npm lint:test",
        "build": "npm run lint:code -s && gik-npm build",
        "docs": "npm run lint:docs -s && gik-npm docs",
        "test": "npm run lint:test -s && gik-npm test",
        "start": "nodemon -V -w $npm_package_directories_src -w $npm_package_directories_test -x 'npm run build -s && npm run test -s'",
        "precommit": "npm run build -s && npm run test -s && npm run ver:commit -s && npm run docs -s"
    },
    "dependencies": {
        "@gik/npm": "0.0.28",
        "chalk": "^2.1.0",
        "columnify": "^1.5.4",
        "debug": "^3.1.0",
        "stack-trace": "0.0.10"
    },
    "devDependencies": {
        "@gik/eslint-config-node": "0.0.2",
        "nodemon": "^1.12.1"
    }
}
